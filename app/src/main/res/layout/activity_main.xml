<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="init IQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/initBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bbb"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintBottom_toBottomOf="@+id/containerLL"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ddd"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintBottom_toTopOf="@+id/bbb"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:id="@+id/containerLL"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/initBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
        <Button
                android:text="first device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/firstDeviceBtn" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/initBtn" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text='send from below'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sendAbcBtn" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/firstDeviceBtn" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/inputET"/>

        <Button
                android:text='open app'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/openApp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/firstDeviceBtn" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <Switch
                android:text="receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiveSw" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/sendAbcBtn" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>